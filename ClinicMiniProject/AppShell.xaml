<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClinicMiniProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="clr-namespace:ClinicMiniProject.UI"
    xmlns:doc="clr-namespace:ClinicMiniProject.UI.Doctor"
    xmlns:nur="clr-namespace:ClinicMiniProject.UI.Nurse"
    xmlns:pat="clr-namespace:ClinicMiniProject.UI.Patient"
    Title="ClinicMiniProject">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate ui:LoginPage}"
        Route="LoginPage"
        Shell.FlyoutBehavior="Disabled" 
        Shell.TabBarIsVisible="False" />

    <!-- Doctor Routes -->
    <ShellContent
        Title="Doctor Dashboard"
        ContentTemplate="{DataTemplate doc:DoctorDashboardPage}"
        Route="DoctorDashboardPage" />

    <ShellContent
        Title="Doctor Inquiry History"
        ContentTemplate="{DataTemplate doc:InquiryHistoryPage}"
        Route="DoctorInquiryHistory" />

    <ShellContent
        Title="Doctor Profile"
        ContentTemplate="{DataTemplate doc:ProfilePage}"
        Route="DoctorProfile" />

    <!-- Other Routes -->
    <ShellContent
        Title="Nurse Home"
        ContentTemplate="{DataTemplate nur:NurseHomePage}"
        Route="NurseHomePage" />

    <ShellContent
        Title="Patient Home"
        ContentTemplate="{DataTemplate pat:PatientHomePage}"
        Route="PatientHomePage" />

    <ShellContent
        Title="Appointment Schedule"
        ContentTemplate="{DataTemplate doc:AppointmentSchedulePage}"
        Route="AppointmentSchedulePage" />

    <ShellContent
        Title="Appointment History"
        ContentTemplate="{DataTemplate doc:AppointmentHistoryPage}"
        Route="AppointmentHistoryPage" />

    <ShellContent
        Title="Reporting Management"
        ContentTemplate="{DataTemplate doc:ReportingManagementPage}"
        Route="ReportingManagementPage" />

    <ShellContent
        Title="Walk-in Queue"
        ContentTemplate="{DataTemplate nur:WalkInPatientQueuePage}"
        Route="WalkInPatientQueuePage" />

    <ShellContent
        Title="Inquiry"
        ContentTemplate="{DataTemplate doc:InquiryPage}"
        Route="Inquiry" />

    <ShellContent
        Title="Inquiry Details"
        ContentTemplate="{DataTemplate doc:InquiryDetailsPage}"
        Route="InquiryDetailsPage" />

    <ShellContent
        Title="Consultation Details"
        ContentTemplate="{DataTemplate doc:ConsultationDetailsPage}"
        Route="ConsultationDetailsPage" />

    <ShellContent
        Title="Patient Details"
        ContentTemplate="{DataTemplate nur:PatientDetailsPage}"
        Route="PatientDetails" />

    <ShellContent
        Title="Nurse Profile"
        ContentTemplate="{DataTemplate nur:NurseProfilePage}"
        Route="NurseProfile" />

    <ShellContent
        Title="Patient Consultation Details"
        ContentTemplate="{DataTemplate pat:PatientConsultationDetailsPage}"
        Route="PatientConsultationDetailsPage" />

</Shell>
