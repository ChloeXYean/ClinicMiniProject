    x:Class="ClinicMiniProject.EndDoctorConsultationPage"
    Title="End Consultation">

    <VerticalStackLayout Padding="20" Spacing="12">

        <Label Text="Date: 12 November 2025"
               FontAttributes="Bold"/>

        <Frame CornerRadius="12">
            <VerticalStackLayout>
                <Label Text="Patient Name: Alex" />
