<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClinicMiniProject.UI.Patient.BookAnAppointment"
    BackgroundColor="White">

    <VerticalStackLayout Spacing="15">

        <Grid BackgroundColor="#5FA8FF" Padding="15" HeightRequest="70">
            <Label
                Text="← Appointment Booking"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalOptions="Center"/>
        </Grid>

        <Label Text="Select Date And Time"
               FontSize="18"
               FontAttributes="Bold"
               Margin="20,10,0,0"/>

        <DatePicker
            Margin="20,0"
            HorizontalOptions="Fill"/>

        <Label Text="Select Service Type"
               FontSize="16"
               FontAttributes="Bold"
               Margin="20,10,0,0"/>

        <Picker
            Margin="20,0"
            Title="General Consultation">
            <Picker.Items>
                <x:String>General Consultation</x:String>
                <x:String>Specialist Consultation</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Available Time Slot"
               FontSize="16"
               FontAttributes="Bold"
               Margin="20,10,0,0"/>

        <HorizontalStackLayout Margin="20,0" Spacing="10">
            <Button Text="10.00 AM" BackgroundColor="#EAEAEA"/>
            <Button Text="11.00 AM" BackgroundColor="#5FA8FF" TextColor="White"/>
            <Button Text="12.00 PM" BackgroundColor="#EAEAEA"/>
        </HorizontalStackLayout>

        <Button
            Text="Confirm"
            BackgroundColor="#5FA8FF"
            TextColor="White"
            FontAttributes="Bold"
            Margin="20,30"/>

    </VerticalStackLayout>
</ContentPage>
