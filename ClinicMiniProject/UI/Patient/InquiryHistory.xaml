<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
    x:Class="ClinicMiniProject.UI.Patient.InquiryHistory"
	Shell.NavBarIsVisible="False"
    BackgroundColor="#F6F7F9">
    <Grid RowDefinitions="Auto, *">
        <control:BackNavBar Grid.Row="0" Title="Inquiry History" BackCommand="{Binding BackCommand}" />
        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="16">

        <SearchBar Placeholder="Search inquiry" />

        <CollectionView ItemsSource="{Binding PatientInquiryHistory}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           BackgroundColor="White"
                           CornerRadius="8"
                           HasShadow="True">
                        <VerticalStackLayout Padding="10">
                            <Label Text="{Binding DoctorName}"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding SymptomHistory}" />
                            <Button Text="View Details"
                                    Command="{Binding ViewDetailsCommand}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
