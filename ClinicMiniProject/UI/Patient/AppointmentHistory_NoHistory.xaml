<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClinicMiniProject.UI.Patient.AppointmentHistory_NoHistory"
    BackgroundColor="#F6F7F9">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Border BackgroundColor="#5DA9FF" Padding="16">
            <Label Text="Appointment History"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White" />
        </Border>

        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="16">

            <Image Source="calendar_icon.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   HorizontalOptions="Center" />

            <Label Text="No History"
                   FontSize="20"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Label Text="Your past appointment will be shown here"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
