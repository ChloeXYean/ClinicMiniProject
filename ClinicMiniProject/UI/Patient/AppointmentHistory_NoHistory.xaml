<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
    x:Class="ClinicMiniProject.UI.Patient.AppointmentHistory_NoHistory"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <!-- Custom Header -->
        <control:BackNavBar Grid.Row="0" Title="Appointment History" BackCommand="{Binding OnBackClicked}"/>

        <VerticalStackLayout Grid.Row="1" 
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="20">

            <Image Source="calendar_icon.png"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center" />

            <Label Text="No History"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Label Text="Your past appointment will be shown here"
                   FontSize="14"
                   TextColor="Black"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>
