<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClinicMiniProject.ViewModels"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Patient.SelectDoctorPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False"
             Title="Select Doctor">

    <Grid RowDefinitions="Auto, Auto, *">
        <!-- Header -->
        <control:BackNavBar Grid.Row="0" Title="Select Doctor" BackCommand="{Binding GoBackCommand}" />

        <!-- Search Bar (Optional, can be filtering logic later) -->
        <SearchBar Grid.Row="1"
                   Placeholder="Search Doctor Name"
                   Margin="15"/>

        <!-- Doctor List -->
        <CollectionView Grid.Row="2" Margin="10" ItemsSource="{Binding AvailableDoctors}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="15"
                           Padding="10"
                           BorderColor="#DDDDDD"
                           HasShadow="True"
                           BackgroundColor="White">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SelectDoctorViewModel}}, Path=SelectDoctorCommand}" CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                            <!-- Avatar Placeholder -->
                            <Frame WidthRequest="60"
                                   HeightRequest="60"
                                   CornerRadius="30"
                                   BackgroundColor="#EAEAEA"
                                   HorizontalOptions="Center"
                                   Padding="0"
                                   BorderColor="Transparent">
                                <Label Text="{Binding staff_name, StringFormat='{0:1}'}" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"
                                       TextColor="Gray"
                                       FontSize="24"
                                       FontAttributes="Bold"/>
                            </Frame>

                            <Label Text="{Binding staff_name}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="TailTruncation"/>

                            <Label Text="{Binding specialities}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="TailTruncation"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>