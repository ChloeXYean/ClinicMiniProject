<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClinicMiniProject.UI.Patient.OnlineInquiryPatient"
	Title="Online Medical Inquiry"
    BackgroundColor="#F6F7F9">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="For non-emergency cases only"
               TextColor="Red"
               FontAttributes="Bold" />

        <Label Text="Doctor" FontAttributes="Bold" />
        <Picker Title="Select Doctor"
                BackgroundColor="White" />

        <Label Text="Symptom Description" FontAttributes="Bold" />
        <Editor Placeholder="Describe your symptoms here..."
                AutoSize="TextChanges"
                HeightRequest="100"
                BackgroundColor="White" />
        
        <Label Text="Upload Photo (Optional)" FontAttributes="Bold" />
        <Frame BackgroundColor="White"
                BorderColor="LightGray"
                Padding="16"
                Margin="0,0,16,0">
            <Grid RowDefinitions="Auto, *" ColumnDefinitions="*, Auto">
                <Editor Grid.Row="0" Grid.Column="0"
                        Placeholder="Add notes about the photo (optional)..."
                        AutoSize="TextChanges"
                        HeightRequest="60"
                        BackgroundColor="White"
                        Text="{Binding PhotoNotes}" />
                <Button Grid.Row="0" Grid.Column="1"
                        Text="Upload"
                        BackgroundColor="#E3F0FF"
                        TextColor="#1E88E5"
                        CornerRadius="8"
                        WidthRequest="80"
                        HeightRequest="40"
                        Command="{Binding UploadPhotoCommand}" />
            </Grid>
        </Frame>
        
        <Border HeightRequest="120"
                BackgroundColor="White"
                Padding="16"
                Margin="0,0,16,0">
            <Image Source="{Binding UploadedPhotoPath}"
                   Aspect="AspectFill"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ViewPhotosCommand}" />
                </Image.GestureRecognizers>
            </Image>
        </Border>
        <Button Text="Submit"
                BackgroundColor="#5DA9FF"
                TextColor="White"
                CornerRadius="16"
                HeightRequest="50" />

    </VerticalStackLayout>
</ContentPage>
