<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Patient.PatientHomePage"
             Title="Patient Home"
             BackgroundColor="#F6F7F9">

    <Grid RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

                <Label Text="Welcome, Patient" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="#333"/>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="White" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Image Source="history.png" HeightRequest="50" Aspect="AspectFit"/>
                        <Label Text="Appointment History" FontSize="16" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAppointmentHistoryCommand}"/>
                    </Border.GestureRecognizers>
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="White" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Image Source="inquiry.png" HeightRequest="50" Aspect="AspectFit"/>
                        <Label Text="Online Medical Inquiry" FontSize="16" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToOnlineInquiryCommand}"/>
                    </Border.GestureRecognizers>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <control:BottomNavBar Grid.Row="1"
                              SelectedTab="Home"
                              HomeCommand="{Binding HomeCommand}"
                              ChatCommand="{Binding InquiryHistoryCommand}"
                              ProfileCommand="{Binding ProfileCommand}" />
    </Grid>
</ContentPage>