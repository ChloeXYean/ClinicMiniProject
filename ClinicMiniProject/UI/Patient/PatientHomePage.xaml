<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             xmlns:converters="clr-namespace:ClinicMiniProject.Converters"
             x:Class="ClinicMiniProject.UI.Patient.PatientHomePage"
             Title="Patient Home"
             BackgroundColor="#F5F7FA"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="16" Spacing="20">

                <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center" BackgroundColor="#E6F3FF" Padding="10">
                    <Label Text="â˜°" FontSize="24" TextColor="#333" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ProfileCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="{Binding Username, StringFormat='Hi, {0}'}" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#333"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           Grid.Column="1"/>

                    <ImageButton Source="bell.png" WidthRequest="15" HeightRequest="15" Grid.Column="2" 
                                 Command="{Binding NotificationCommand}" Aspect="AspectFit"/>
                </Grid>

                <Frame CornerRadius="16" BackgroundColor="#2D60FF" Padding="20" HasShadow="True" HeightRequest="180">
                    <Grid>
                        <Grid RowDefinitions="Auto, *, Auto" IsVisible="{Binding HasUpcomingAppointment}">
                            <HorizontalStackLayout Spacing="8">
                                <Image Source="calendar_white.png" WidthRequest="16" HeightRequest="16" Aspect="AspectFit"/>
                                <Label Text="Upcoming Appointment" TextColor="White" FontSize="20" FontAttributes="Bold"/>
                            </HorizontalStackLayout>

                            <Grid Grid.Row="1" ColumnDefinitions="*, *" VerticalOptions="Center">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Date" TextColor="#B0C4FF" FontSize="12"/>
                                    <Label Text="{Binding AppointmentDate}" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="4">
                                    <Label Text="Time" TextColor="#B0C4FF" FontSize="12"/>
                                    <Label Text="{Binding AppointmentTime}" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Grid>

                            <Grid Grid.Row="2" ColumnDefinitions="*, Auto" VerticalOptions="End">
                                <HorizontalStackLayout Spacing="8">
                                    <Frame CornerRadius="12" HeightRequest="24" WidthRequest="24" Padding="0" BackgroundColor="#4E7CFF" HasShadow="False">
                                        <Label Text="ðŸ‘¨â€âš•ï¸" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12"/>
                                    </Frame>
                                    <Label Text="{Binding DoctorName}" TextColor="White" VerticalOptions="Center" FontSize="14"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Grid.Column="1" Spacing="4">
                                    <Label Text="People Ahead:" TextColor="White" FontSize="16" VerticalOptions="Center"/>
                                    <Label Text="{Binding QueueSequence}" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Grid>

                        <VerticalStackLayout IsVisible="{Binding HasUpcomingAppointment, Converter={StaticResource InvertedBoolConverter}}" 
                                             VerticalOptions="Center" HorizontalOptions="Center" Spacing="10"
                                             InputTransparent="True">
                            <Label Text="No upcoming appointments" TextColor="#B0C4FF" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <Grid ColumnDefinitions="*,*,*">
                    <VerticalStackLayout Spacing="8">
                        <Frame CornerRadius="30" HeightRequest="70" WidthRequest="70" Padding="0" BackgroundColor="#D6ECFF" HasShadow="True">
                            <Image Source="appointment.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToAppointmentBookingCommand}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Label Text="Book Appointment" FontSize="11" HorizontalTextAlignment="Center" TextColor="#333"/>
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToAppointmentBookingCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" Spacing="8">
                        <Frame CornerRadius="30" HeightRequest="70" WidthRequest="70" Padding="0" BackgroundColor="#D6ECFF" HasShadow="True">
                            <Image Source="time.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToAppointmentHistoryCommand}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Label Text="Appointment History" FontSize="11" HorizontalTextAlignment="Center" TextColor="#333"/>
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToAppointmentHistoryCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" Spacing="8">
                        <Frame CornerRadius="30" HeightRequest="70" WidthRequest="70" Padding="0" BackgroundColor="#D6ECFF" HasShadow="True">
                            <Image Source="inquiry.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToOnlineInquiryCommand}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Label Text="Online Medical Inquiry" FontSize="11" HorizontalTextAlignment="Center" TextColor="#333"/>
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToOnlineInquiryCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                    </VerticalStackLayout>
                </Grid>

                <Frame CornerRadius="16" Padding="12" BackgroundColor="#D6ECFF" HasShadow="True" HeightRequest="150">
                    <HorizontalStackLayout Spacing="12">
                        <!--BoxView WidthRequest="80" HeightRequest="80" Color="#CCCCCC" CornerRadius="8"/-->
                        <Image Source="vaccine.webp" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center"></Image>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Now Available!" FontAttributes="Bold" TextColor="#333"/>
                            <Label Text="Seasonal influenza vaccination." FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <control:BottomNavBar Grid.Row="1"
                              SelectedTab="Home"
                              HomeCommand="{Binding HomeCommand}"
                              ChatCommand="{Binding InquiryHistoryCommand}"
                              ProfileCommand="{Binding ProfileCommand}" />
    </Grid>
</ContentPage>