<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClinicMiniProject.UI.Patient.AppointmentSchedule"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <Label Text="â† Appointment Schedule"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

            <Grid ColumnDefinitions="100,*,*"
                  BackgroundColor="#E3F2FD"
                  Padding="6">
                <Label Text="Time"
                       FontAttributes="Bold"/>
                <Label Text="General Consultation"
                       Grid.Column="1"
                       FontAttributes="Bold"/>
                <Label Text="Follow Up Treatment"
                       Grid.Column="2"
                       FontAttributes="Bold"/>
            </Grid>

            <CollectionView>
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>9:00 AM</x:String>
                        <x:String>9:30 AM</x:String>
                        <x:String>10:00 AM</x:String>
                        <x:String>10:30 AM</x:String>
                        <x:String>11:00 AM</x:String>
                        <x:String>11:30 AM</x:String>
                        <x:String>12:00 PM</x:String>
                        <x:String>12:30 PM</x:String>
                        <x:String>1:00 PM</x:String>
                        <x:String>2:00 PM</x:String>
                        <x:String>3:00 PM</x:String>
                        <x:String>4:00 PM</x:String>
                        <x:String>5:00 PM</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="100,*,*"
                              Padding="6"
                              BackgroundColor="#F8FBFF"
                              Margin="0,0,0,1">

                            <Label Text="{Binding}" />

                            <Label Text="Ali"
                                   Grid.Column="1"
                                   HorizontalTextAlignment="Center"
                                   TextColor="Black"/>

                            <Label Text=""
                                   Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>