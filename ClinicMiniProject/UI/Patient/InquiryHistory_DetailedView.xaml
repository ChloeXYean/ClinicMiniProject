<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="YourNamespace.InquiryHistoryDetailPage"
    BackgroundColor="#F6F7F9">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Border BackgroundColor="#5DA9FF" Padding="16">
            <Label Text="Inquiry Details"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White" />
        </Border>

        <ScrollView>
            <VerticalStackLayout Padding="10" Spacing="12">

                <Label Text="Doctor Name: {Binding DoctorName}"
                       FontAttributes="Bold"
                       FontSize="16" />

                <Label Text="Symptom History:"
                       FontAttributes="Bold"
                       FontSize="16" />

                <Label Text="{Binding SymptomHistory}"
                       FontSize="14"
                       TextColor="Black" />

                <Label Text="Date: {Binding Date}"
                       FontSize="14"
                       TextColor="Black" />

                <Button Text="Back to History"
                        BackgroundColor="#5DA9FF"
                        TextColor="White"
                        CornerRadius="16"
                        Command="{Binding BackCommand}" />

            </VerticalStackLayout>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
