<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
    x:Class="ClinicMiniProject.UI.Patient.PatientConsultationDetailsPage"
    Shell.NavBarIsVisible="False"
    Title="Consultation Details">

    <Grid RowDefinitions="Auto, *">
        <control:BackNavBar Grid.Row="0" Title="Consultation Details" BackCommand="{Binding BackCommand}" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="10">

                <Label Text="Date: 12 November 2025"/>
                <Label Text="Appointment Time: 10:00 AM"/>
                <Label Text="Patient Name: Alex"/>
                <Label Text="IC: 000000-00-0000"/>
                <Label Text="Phone: 012-3456789"/>
                <Label Text="Service: General Consultation"/>

                <Label Text="Doctor's Remark"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>