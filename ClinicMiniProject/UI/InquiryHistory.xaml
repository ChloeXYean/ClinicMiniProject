<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="YourNamespace.InquiryHistoryPage"
    BackgroundColor="#F6F7F9">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Border BackgroundColor="#5DA9FF" Padding="16">
            <Label Text="Inquiry History"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White" />
        </Border>

        <SearchBar Placeholder="Search inquiry" />

        <CollectionView ItemsSource="{Binding Inquiries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           BackgroundColor="White"
                           CornerRadius="8"
                           HasShadow="True">
                        <VerticalStackLayout Padding="10">
                            <Label Text="{Binding DoctorName}"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding SymptomHistory}" />
                            <Button Text="View Details"
                                    Command="{Binding ViewDetailsCommand}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
