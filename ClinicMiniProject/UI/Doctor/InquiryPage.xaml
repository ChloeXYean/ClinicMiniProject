<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             xmlns:conv="clr-namespace:ClinicMiniProject.Converters"
             x:Class="ClinicMiniProject.UI.Doctor.InquiryPage"
             Title=""
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InquiryStatusToColorConverter x:Key="InquiryStatusToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        <control:TopNavBar x:Name="TopBar" Grid.Row="0" />

        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="12">

            <Label Text="Online Medical Inquiry" FontSize="20" FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Entry Grid.Column="0" Placeholder="Search" Text="{Binding SearchQuery, Mode=TwoWay}" />
                <Button Grid.Column="1" Text="Filter" Command="{Binding FilterCommand}" />
            </Grid>

            <CollectionView ItemsSource="{Binding InquiryList}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="1" Stroke="#E5E7EB" Padding="12" Margin="0,0,0,10">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="10">

                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding PatientName}" FontAttributes="Bold" FontSize="16" />

                                <Border Grid.Row="0" Grid.Column="1" Padding="8,2" StrokeThickness="0"
                                        BackgroundColor="{Binding Status, Converter={StaticResource InquiryStatusToColorConverter}}">
                                    <Label Text="{Binding Status}" TextColor="White" FontSize="12" />
                                </Border>

                                <Label Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding SymptomSnippet}" TextColor="#555" />

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.ViewInquiryDetailsCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                        CommandParameter="{Binding InquiryId}" />
                                </Grid.GestureRecognizers>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

        <control:BottomNavBar x:Name="BottomBar" Grid.Row="2" SelectedTab="Chat" />
    </Grid>
</ContentPage>
