<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Doctor.EditDoctorProfilePage"
             Shell.NavBarIsVisible="False"
             Title="Edit Profile"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *">
        <controls:BackNavBar Grid.Row="0" BackCommand="{Binding BackCommand}" Title="Edit Profile" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <VerticalStackLayout HorizontalOptions="Center" Spacing="12">
                    <Border HeightRequest="100" WidthRequest="100" StrokeShape="RoundRectangle 50" BackgroundColor="#E0E0E0" StrokeThickness="2" Stroke="#2D5AF0">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangeProfilePictureCommand}"/>
                        </Border.GestureRecognizers>
                        <Image Source="{Binding ProfilePictureSource}" Aspect="AspectFill" Margin="5"/>
                    </Border>
                    <Label Text="Tap to change photo" FontSize="12" TextColor="#2D5AF0" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <Border BackgroundColor="#F8F9FA" StrokeThickness="0" StrokeShape="RoundRectangle 15" Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Doctor Information" FontSize="16" FontAttributes="Bold" TextColor="Black"/>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Full Name" TextColor="Gray" FontSize="14"/>
                            <Border BackgroundColor="White" StrokeThickness="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="15,10">
                                <Entry Text="{Binding Name}" Placeholder="Enter full name" TextColor="Black" FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Phone Number" TextColor="Gray" FontSize="14"/>
                            <Border BackgroundColor="White" StrokeThickness="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="15,10">
                                <Entry Text="{Binding PhoneNumber}" Placeholder="Enter phone number" Keyboard="Telephone" TextColor="Black" FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Working Hours" TextColor="Gray" FontSize="14"/>
                            <Border BackgroundColor="White" StrokeThickness="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="15,10">
                                <Entry Text="{Binding WorkingHours}" Placeholder="e.g., 9:00 AM - 9:00 PM" TextColor="Black" FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="#F8F9FA" StrokeThickness="0" StrokeShape="RoundRectangle 15" Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Weekly Availability" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="Select days you are available:" TextColor="Gray" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="10">
                            <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsMon}" Color="#2D5AF0"/>
                                <Label Text="Monday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="8">
                                <CheckBox IsChecked="{Binding IsTue}" Color="#2D5AF0"/>
                                <Label Text="Tuesday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsWed}" Color="#2D5AF0"/>
                                <Label Text="Wednesday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="8">
                                <CheckBox IsChecked="{Binding IsThu}" Color="#2D5AF0"/>
                                <Label Text="Thursday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsFri}" Color="#2D5AF0"/>
                                <Label Text="Friday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Spacing="8">
                                <CheckBox IsChecked="{Binding IsSat}" Color="#2D5AF0"/>
                                <Label Text="Saturday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsSun}" Color="#2D5AF0"/>
                                <Label Text="Sunday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Button Text="Save Changes" 
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#2D5AF0" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        HeightRequest="50"
                        Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>