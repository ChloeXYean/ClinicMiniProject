<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Doctor.InquiryHistoryPage"
             BackgroundColor="#F8F9FD" 
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        <control:TopNavBar Grid.Row="0"
                          UserName="{Binding DoctorName}"
                          MenuCommand="{Binding ToggleMenuCommand}"
                          BellCommand="{Binding NotificationCommand}" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <Label Text="Inquiry History" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#333" />

                <!-- Inquiry List -->
                <CollectionView x:Name="InquiriesList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="1" 
                                   Stroke="#E0E0E0" 
                                   BackgroundColor="White" 
                                   Padding="15" 
                                   Margin="0,5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="{Binding PatientName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding InquiryDate}" 
                                           FontSize="12" 
                                           TextColor="#666" />
                                    <Label Text="{Binding InquiryText}" 
                                           FontSize="14" 
                                           TextColor="#333" 
                                           MaxLines="2"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <control:BottomNavBar Grid.Row="2" SelectedTab="InquiryHistory"
                             HomeCommand="{Binding NavigateToHomeCommand}"
                             ChatCommand="{Binding NavigateToInquiryCommand}"
                             ProfileCommand="{Binding NavigateToProfileCommand}" />
    </Grid>
</ContentPage>
