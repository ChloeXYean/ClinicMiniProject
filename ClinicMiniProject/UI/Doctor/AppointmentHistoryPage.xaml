<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             Shell.NavBarIsVisible="True"
             x:Class="ClinicMiniProject.UI.Doctor.AppointmentHistoryPage"
             x:Name="ThisPage"
             BackgroundColor="#F5F7FA"
             Title="Appointment History">

    <Grid RowDefinitions="Auto, *, Auto" RowSpacing="0">

        <control:BackNavBar Grid.Row="0" 
                            BackCommand="{Binding BackCommand, Source={x:Reference ThisPage}}" />

        <RefreshView Grid.Row="1" Command="{Binding LoadAppointmentsCommand}">
            <CollectionView ItemsSource="{Binding Appointments}" Margin="15">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="0" BackgroundColor="{Binding CardBackgroundColor}" Padding="15">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.05" Radius="5" Offset="0,2"/>
                            </Border.Shadow>

                            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*, Auto">
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding Date}" 
                                       TextColor="#999" FontSize="12"/>
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Time}" 
                                       TextColor="#999" FontSize="12" HorizontalOptions="End"/>

                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{Binding DoctorName}" 
                                       FontSize="16" FontAttributes="Bold" TextColor="#333" Margin="0,5"/>

                                <Label Grid.Row="2" Grid.Column="0" Text="{Binding Details}" 
                                       TextColor="#555" FontSize="13"/>

                                <Border Grid.Row="2" Grid.Column="1" 
                                        BackgroundColor="{Binding BadgeColor}" 
                                        StrokeThickness="0" 
                                        Padding="8,4" 
                                        HorizontalOptions="End">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Status}" 
                                           TextColor="{Binding StatusColor}" 
                                           FontSize="11" FontAttributes="Bold"/>
                                </Border>

                                <Button Grid.Row="3" Grid.ColumnSpan="2" 
                                        Text="View Details" 
                                        Command="{Binding ViewDetailsCommand}"
                                        BackgroundColor="#6EA8FE" 
                                        TextColor="White" 
                                        HeightRequest="36" 
                                        FontSize="14" 
                                        Margin="0,8,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="No history found." TextColor="#999"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <control:BottomNavBar x:Name="BottomBar" Grid.Row="2" />
    </Grid>
</ContentPage>