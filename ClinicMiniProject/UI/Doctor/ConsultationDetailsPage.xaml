<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Doctor.ConsultationDetailsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F7FA">

    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        <control:BackNavBar Grid.Row="0" Title="Consultation Details" BackCommand="{Binding BackCommand}" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="16">

                <!-- Appointment Date & Time -->
                <Border BackgroundColor="White" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Appointment Date" FontAttributes="Bold" FontSize="16" TextColor="#333" />
                        <Label Text="{Binding AppointmentDate}" FontSize="14" TextColor="#666" />
                        <Label Text="{Binding AppointmentTime}" FontSize="14" TextColor="#666" />
                    </VerticalStackLayout>
                </Border>

                <!-- Patient Information -->
                <Border BackgroundColor="White" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Patient Information" FontAttributes="Bold" FontSize="16" TextColor="#333" />
                        <Label Text="{Binding PatientName}" FontSize="14" TextColor="#666" />
                        <Label Text="{Binding PatientIC}" FontSize="14" TextColor="#666" />
                        <Label Text="{Binding ServiceType}" FontSize="14" TextColor="#666" />
                    </VerticalStackLayout>
                </Border>

                <!-- Doctor Remarks -->
                <Border BackgroundColor="White" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Doctor Remarks" FontAttributes="Bold" FontSize="16" TextColor="#333" />
                        <Label Text="{Binding DoctorRemarks}" FontSize="14" TextColor="#666" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Nurse Notes -->
                <Border BackgroundColor="White" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Nurse Notes" FontAttributes="Bold" FontSize="16" TextColor="#333" />
                        <Label Text="{Binding NurseNotes}" FontSize="14" TextColor="#666" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Prescription -->
                <Border BackgroundColor="White" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Prescription" FontAttributes="Bold" FontSize="16" TextColor="#333" />
                        <Label Text="{Binding Prescription}" FontSize="14" TextColor="#666" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Status -->
                <Border BackgroundColor="White" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Consultation Status" FontAttributes="Bold" FontSize="16" TextColor="#333" />
                        <Label Text="{Binding Status}" FontSize="14" TextColor="#666" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>