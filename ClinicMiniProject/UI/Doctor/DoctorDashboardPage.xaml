<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             xmlns:conv="clr-namespace:ClinicMiniProject.Converters"
             x:Class="ClinicMiniProject.UI.Doctor.DoctorDashboardPage"
             BackgroundColor="#F8F9FD" 
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InquiryStatusToColorConverter x:Key="InquiryStatusToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        <control:TopNavBar Grid.Row="0"
                          UserName="{Binding DoctorName}"
                          MenuCommand="{Binding ToggleMenuCommand}"
                          BellCommand="{Binding NotificationCommand}" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Border StrokeThickness="0" BackgroundColor="White" Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,4"/>
                    </Border.Shadow>
                    
                    <Grid ColumnDefinitions="6, *">
                        <BoxView Grid.Column="0" Color="#6EA8FE" CornerRadius="16,0,16,0"/>
                        
                        <VerticalStackLayout Grid.Column="1" Padding="16" Spacing="12">
                            <Label Text="Today Overview" FontSize="18" FontAttributes="Bold" TextColor="#333" />
                            <Label Text="{Binding CurrentDate, StringFormat='ðŸ“… {0}'}" FontSize="13" TextColor="#666"/>
                            
                            <Grid ColumnDefinitions="*, *, *" RowSpacing="5" Margin="0,5,0,0">
                                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                                    <Label Text="{Binding TodayStats.TotalConsulted}" FontSize="22" FontAttributes="Bold" TextColor="#2D5AF0" HorizontalOptions="Center"/>
                                    <Label Text="Total" FontSize="11" TextColor="#999" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                                    <Label Text="{Binding TodayStats.OnlineConsulted}" FontSize="22" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center"/>
                                    <Label Text="Online" FontSize="11" TextColor="#999" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                                    <Label Text="{Binding TodayStats.WalkInConsulted}" FontSize="22" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center"/>
                                    <Label Text="Walk-in" FontSize="11" TextColor="#999" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Border StrokeThickness="0" BackgroundColor="White" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,4"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="15">
                        <Label Text="Upcoming Schedule" FontSize="18" FontAttributes="Bold" TextColor="#333" />
                        
                        <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="{Binding UpcomingSchedule.PendingAppointments, StringFormat='Pending: {0}'}" FontSize="14" TextColor="#444" FontAttributes="Bold"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding UpcomingSchedule.OnlinePending, StringFormat='Online: {0}'}" FontSize="12" TextColor="#666" />
                                    <Label Text="|" TextColor="#DDD"/>
                                    <Label Text="{Binding UpcomingSchedule.WalkInPending, StringFormat='Walk-in: {0}'}" FontSize="12" TextColor="#666" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <Border Grid.Column="1" BackgroundColor="#FFF0F0" Padding="12,8" StrokeShape="RoundRectangle 10">
                                <VerticalStackLayout HorizontalOptions="Center">
                                    <Label Text="NEXT AT" FontSize="10" TextColor="#D61F1F" HorizontalOptions="Center" FontAttributes="Bold"/>
                                    <Label Text="{Binding NextAppointmentTime}" FontSize="14" TextColor="#D61F1F" FontAttributes="Bold" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Consultation Details Section -->
                <Border StrokeThickness="0" BackgroundColor="White" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,4"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="15">
                        <Label Text="Consultation Details" FontSize="18" FontAttributes="Bold" TextColor="#333" />
                        
                        <!-- Show when no appointments available -->
                        <VerticalStackLayout IsVisible="{Binding HasNoAppointments}" Spacing="10">
                            <Label Text="No appointments scheduled for today" FontSize="14" TextColor="#666" HorizontalOptions="Center"/>
                            <Label Text="Available for walk-in patients" FontSize="12" TextColor="#999" HorizontalOptions="Center"/>
                        </VerticalStackLayout>

                        <!-- Show next appointment details -->
                        <VerticalStackLayout IsVisible="{Binding HasNextAppointment}" Spacing="12">
                            <Grid ColumnDefinitions="Auto,*">
                                <BoxView Grid.Column="0" Color="#6EA8FE" CornerRadius="8" WidthRequest="4" HeightRequest="40" Margin="0,0,10,0"/>
                                <VerticalStackLayout Grid.Column="1" Spacing="4">
                                    <Label Text="{Binding UpcomingSchedule.NextAppointmentDetails.PatientName}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                    <Label Text="{Binding UpcomingSchedule.NextAppointmentDetails.ServiceType}" FontSize="12" TextColor="#666"/>
                                    <Label Text="{Binding UpcomingSchedule.NextAppointmentDetails.AppointmentTime, StringFormat='Scheduled: {0:hh:mm tt}'}" FontSize="12" TextColor="#666"/>
                                </VerticalStackLayout>
                            </Grid>

                            <Border BackgroundColor="#F0F8FF" Padding="12" StrokeShape="RoundRectangle 8">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Early Start Available" FontSize="12" TextColor="#2D5AF0" FontAttributes="Bold" HorizontalOptions="Center"/>
                                    <Label Text="Patient can start earlier if available" FontSize="10" TextColor="#666" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>

                            <Button Text="Start Consultation" 
                                    Command="{Binding StartConsultationCommand}"
                                    BackgroundColor="#2D5AF0" 
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="20,10"/>
                        </VerticalStackLayout>

                        <!-- Show consultation in progress -->
                        <VerticalStackLayout IsVisible="{Binding IsConsultationInProgress}" Spacing="12">
                            <Grid ColumnDefinitions="Auto,*">
                                <BoxView Grid.Column="0" Color="#28A745" CornerRadius="8" WidthRequest="4" HeightRequest="40" Margin="0,0,10,0"/>
                                <VerticalStackLayout Grid.Column="1" Spacing="4">
                                    <Label Text="{Binding CurrentConsultation.PatientName}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                    <Label Text="Consultation in progress" FontSize="12" TextColor="#28A745"/>
                                </VerticalStackLayout>
                            </Grid>

                            <Editor Text="{Binding ConsultationRemarks}" 
                                    Placeholder="Enter consultation remarks..." 
                                    HeightRequest="100"
                                    BackgroundColor="#F8F9FA"
                                    TextColor="#333"/>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <Button Grid.Column="0" Text="End Consultation" 
                                        Command="{Binding EndConsultationCommand}"
                                        BackgroundColor="#DC3545" 
                                        TextColor="White"
                                        CornerRadius="8"/>
                                <Button Grid.Column="1" Text="Save Remarks" 
                                        Command="{Binding SaveRemarksCommand}"
                                        BackgroundColor="#28A745" 
                                        TextColor="White"
                                        CornerRadius="8"/>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

				<Label Text="Quick Actions" FontAttributes="Bold" FontSize="16" TextColor="#555" Margin="5,0,0,-10"/>

				<Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">

					<Border Grid.Row="0" Grid.Column="0" StrokeShape="RoundRectangle 15" BackgroundColor="White" StrokeThickness="0" Padding="15">
						<Border.Shadow>
							<Shadow Brush="Black" Opacity="0.03" Radius="5" Offset="0,2"/>
						</Border.Shadow>
						<VerticalStackLayout Spacing="8" HorizontalOptions="Center">
							<Image Source="appointment.png" HeightRequest="40" WidthRequest="40"/>
							<Label Text="Appointment Schedule" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
						</VerticalStackLayout>
						<Border.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding NavigateToAppointmentScheduleCommand}"/>
						</Border.GestureRecognizers>
					</Border>

					<Border Grid.Row="0" Grid.Column="1" StrokeShape="RoundRectangle 15" BackgroundColor="White" StrokeThickness="0" Padding="15">
						<Border.Shadow>
							<Shadow Brush="Black" Opacity="0.03" Radius="5" Offset="0,2"/>
						</Border.Shadow>
						<VerticalStackLayout Spacing="8" HorizontalOptions="Center">
							<Image Source="history.png" HeightRequest="40" WidthRequest="40"/>
							<Label Text="Appointment History" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
						</VerticalStackLayout>
						<Border.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding NavigateToAppointmentHistoryCommand}"/>
						</Border.GestureRecognizers>
					</Border>

					<Border Grid.Row="1" Grid.Column="0" StrokeShape="RoundRectangle 15" BackgroundColor="White" StrokeThickness="0" Padding="15">
						<Border.Shadow>
							<Shadow Brush="Black" Opacity="0.03" Radius="5" Offset="0,2"/>
						</Border.Shadow>
						<VerticalStackLayout Spacing="8" HorizontalOptions="Center">
							<Image Source="report.png" HeightRequest="40" WidthRequest="40"/>
							<Label Text="Reporting Management" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
						</VerticalStackLayout>
						<Border.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding NavigateToReportingManagementCommand}"/>
						</Border.GestureRecognizers>
					</Border>

					<Border Grid.Row="1" Grid.Column="1" StrokeShape="RoundRectangle 15" BackgroundColor="White" StrokeThickness="0" Padding="15">
						<Border.Shadow>
							<Shadow Brush="Black" Opacity="0.03" Radius="5" Offset="0,2"/>
						</Border.Shadow>
						<VerticalStackLayout Spacing="8" HorizontalOptions="Center">
							<Image Source="consultation.png" HeightRequest="40" WidthRequest="40"/>
							<Label Text="Consultation Details" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
						</VerticalStackLayout>
						<Border.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding NavigateToConsultationDetailsCommand}"/>
						</Border.GestureRecognizers>
					</Border>
				</Grid>

            </VerticalStackLayout>
        </ScrollView>

        <control:BottomNavBar Grid.Row="2" SelectedTab="Home"
                             HomeCommand="{Binding NavigateToHomeCommand}"
                             ChatCommand="{Binding NavigateToInquiryCommand}"
                             ProfileCommand="{Binding NavigateToProfileCommand}" />
    </Grid>
</ContentPage>
