<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Doctor.ProfilePage"
             Shell.NavBarIsVisible="False"
             Title="Doctor's Profile">
    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">

        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="20,15" BackgroundColor="#6EA8FE">
            <ImageButton Grid.Column="0" Source="back.png" HeightRequest="22" WidthRequest="22" BackgroundColor="Transparent" Clicked="OnBackClicked" />
            <Label Grid.Column="1" Text="Doctor's Profile" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" TextColor="White" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="14">

                <Border BackgroundColor="#FFFFFF" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">

                        <Border Grid.RowSpan="3" Grid.Column="0" StrokeThickness="0" BackgroundColor="#F5F7FF" HeightRequest="86" WidthRequest="86">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="43" />
                            </Border.StrokeShape>
                            <Image Source="{Binding ProfileImageUri}" Aspect="AspectFill" />
                        </Border>

                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding DoctorId, StringFormat='Doctor ID: {0}'}" TextColor="Gray" FontSize="12"/>

                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding DoctorName, StringFormat='Dr. {0}'}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>

                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding PhoneNumber, StringFormat='Phone: {0}'}" TextColor="Gray"/>
                    </Grid>
                </Border>

                <Border BackgroundColor="#FFFFFF" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Working Hours" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="{Binding WorkingHours}" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="#FFFFFF" StrokeThickness="0" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Weekly Availability" FontAttributes="Bold" TextColor="Black"/>

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="10" InputTransparent="True">

                            <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsMon}" Color="#2D5AF0"/>
                                <Label Text="Monday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="8">
                                <CheckBox IsChecked="{Binding IsTue}" Color="#2D5AF0"/>
                                <Label Text="Tuesday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsWed}" Color="#2D5AF0"/>
                                <Label Text="Wednesday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="8">
                                <CheckBox IsChecked="{Binding IsThu}" Color="#2D5AF0"/>
                                <Label Text="Thursday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsFri}" Color="#2D5AF0"/>
                                <Label Text="Friday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Spacing="8">
                                <CheckBox IsChecked="{Binding IsSat}" Color="#2D5AF0"/>
                                <Label Text="Saturday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding IsSun}" Color="#2D5AF0"/>
                                <Label Text="Sunday" VerticalOptions="Center" TextColor="Black"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="#FFFFFF" StrokeThickness="0" Padding="16" Margin="0,20,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Account Settings" FontAttributes="Bold" FontSize="16" TextColor="#333" />

                        <Button Text="Edit Profile" 
                                Command="{Binding EditProfileCommand}" 
                                BackgroundColor="#2D5AF0" 
                                TextColor="White"
                                HeightRequest="48"
                                CornerRadius="8"
                                Margin="0,0,0,10" />

                        <Button Text="Logout" 
                                Command="{Binding LogoutCommand}" 
                                BackgroundColor="#FF4444" 
                                TextColor="White"
                                HeightRequest="48"
                                CornerRadius="8" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <control:BottomNavBar x:Name="BottomBar" Grid.Row="2" SelectedTab="Profile" />
    </Grid>
</ContentPage>