<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicMiniProject.UI.Nurse.EndConsultationDetailsPage"
             BackgroundColor="#F5F7FA"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="20,15" BackgroundColor="#2D5AF0">
            <ImageButton Grid.Column="0" 
                         Source="back.png" 
                         HeightRequest="24" WidthRequest="24" 
                         BackgroundColor="Transparent" 
                         Clicked="OnBackClicked"
                         HorizontalOptions="Start"/>

            <Label Grid.Column="1" 
                   Text="Consultation Summary" 
                   TextColor="White"
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="-24,0,0,0"/>
        </Grid>

        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <Border StrokeThickness="0" BackgroundColor="White" Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,4"/>
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, *" RowSpacing="8">
                        <Image Grid.Row="0" Grid.Column="0" Source="person.png" HeightRequest="20" VerticalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="{Binding PatientName}" 
                               FontSize="18" FontAttributes="Bold" TextColor="#333" Margin="10,0,0,0"/>

                        <Label Grid.Row="1" Grid.Column="1" 
                               Text="{Binding PatientIC}" 
                               FontSize="14" TextColor="#777" Margin="10,0,0,0"/>

                        <Border Grid.Row="2" Grid.Column="1" HorizontalOptions="Start" Margin="10,5,0,0"
                                BackgroundColor="#E3F2FD" StrokeThickness="0" Padding="12,6">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="{Binding ServiceType}" TextColor="#2D5AF0" FontSize="12" FontAttributes="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ‘¨â€âš•ï¸ Doctor's Diagnosis" FontSize="14" FontAttributes="Bold" TextColor="#555" Margin="5,0,0,0"/>
                    <Border StrokeThickness="0" BackgroundColor="#EFEFEF" Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding DoctorRemark}"
                                IsReadOnly="True"
                                Placeholder="No remarks from doctor."
                                BackgroundColor="Transparent"
                                AutoSize="TextChanges"
                                FontSize="14"
                                TextColor="#555"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ‘©â€âš•ï¸ Nurse's Notes / Actions" FontSize="14" FontAttributes="Bold" TextColor="#2D5AF0" Margin="5,0,0,0"/>
                    <Border StrokeThickness="1" Stroke="#B3C5F5" BackgroundColor="#F0F8FF" Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding NurseRemark}"
                                Placeholder="Enter medication, instructions, or follow-up notes..."
                                BackgroundColor="Transparent"
                                AutoSize="TextChanges"
                                HeightRequest="120"
                                FontSize="14"/>
                    </Border>
                </VerticalStackLayout>

                <Button Text="End Consultation"
                        BackgroundColor="#FF4D4D"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        CornerRadius="25"
                        Margin="0,20,0,40"
                        Command="{Binding EndConsultationCommand}">
                    <Button.Shadow>
                        <Shadow Brush="#FF4D4D" Opacity="0.4" Radius="10" Offset="0,4"/>
                    </Button.Shadow>
                </Button>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>