<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Nurse.PatientDetailsPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *, Auto">

        <controls:BackNavBar Title="Patient Details" 
                             BackCommand="{Binding BackCommand}" 
                             Grid.Row="0"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Border HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 40" BackgroundColor="#E0E0E0" StrokeThickness="0">
                        <Image Source="profilepicture.png" Aspect="AspectFit" Margin="20"/>
                    </Border>

                    <Label Text="{Binding PatientName}" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="Black" 
                           HorizontalTextAlignment="Center"/>

                    <Label Text="{Binding QueueNo, StringFormat='Queue ID: {0}'}" 
                           FontSize="14" 
                           TextColor="#2D5AF0" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <Label Text="Personal Information" FontSize="16" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,0"/>

                <Border BackgroundColor="#F8F9FA" StrokeThickness="0" StrokeShape="RoundRectangle 15" Padding="20">
                    <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *" RowSpacing="15">

                        <Label Grid.Row="0" Grid.Column="0" Text="IC Number:" TextColor="Gray" FontSize="13" WidthRequest="100"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding IcNumber}" TextColor="Black" FontSize="14" FontAttributes="Bold"/>

                    </Grid>
                </Border>


                <Border BackgroundColor="#F8F9FA" StrokeThickness="0" StrokeShape="RoundRectangle 15" Padding="20">
                    <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *" RowSpacing="15">

                        <Label Grid.Row="0" Grid.Column="0" Text="Registered Time:" TextColor="Gray" FontSize="13" WidthRequest="100"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding RegisteredTime}" TextColor="Black" FontSize="14" FontAttributes="Bold"/>

                    </Grid>
                </Border>

                <Border BackgroundColor="#F8F9FA" StrokeThickness="0" StrokeShape="RoundRectangle 15" Padding="20">
                    <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *" RowSpacing="15">

                        <Label Grid.Row="0" Grid.Column="0" Text="Phone Number:" TextColor="Gray" FontSize="13" WidthRequest="100"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding PhoneNumber}" TextColor="Black" FontSize="14" FontAttributes="Bold"/>

                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <Border Grid.Row="2" Padding="20" StrokeThickness="0" BackgroundColor="White">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,-5"/>
            </Border.Shadow>

            <Button Text="Done" 
                    Command="{Binding BackCommand}" 
                    BackgroundColor="#6EA8FE" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    HeightRequest="50"/>
        </Border>
    </Grid>
</ContentPage>