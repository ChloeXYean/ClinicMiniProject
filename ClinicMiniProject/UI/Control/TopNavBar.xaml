<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ClinicMiniProject.UI.Control"
             x:Class="ClinicMiniProject.UI.Control.TopNavBar">
    <Border BackgroundColor="#6EA8FE"
            StrokeThickness="0"
            Padding="20,15,20,20" 
            HorizontalOptions="Fill"
            VerticalOptions="Start">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="0,0,30,30" />
        </Border.StrokeShape>

        <Border.Shadow>
            <Shadow Brush="Black" Opacity="0.1" Radius="5" Offset="0,5"/>
        </Border.Shadow>

        <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">

            <ImageButton Grid.Column="0"
                         Source="menu.png"
                         HeightRequest="25"
                         WidthRequest="25"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnMenuClicked"/>

            <Label Grid.Column="1"
                   x:Name="TitleLabel"
                   Text="{Binding Source={RelativeSource AncestorType={x:Type control:TopNavBar}}, Path=UserName, StringFormat='Hi, Dr. {0}!'}"
                   Text="{Binding UserGreeting}" 
                   TextColor="Black"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Start" 
                   VerticalOptions="Center"
                   Margin="15,0,0,0"/>

            <ImageButton Grid.Column="2"
                         Source="bell.png"
                         HeightRequest="25"
                         WidthRequest="25"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Clicked="OnBellClicked"/>

            <BoxView Grid.Column="2" 
                     Color="Red" 
                     HeightRequest="8" 
                     WidthRequest="8" 
                     CornerRadius="4" 
                     HorizontalOptions="End" 
                     VerticalOptions="Start" 
                     Margin="0,0,2,0"/>
        </Grid>
    </Border>
</ContentView>
