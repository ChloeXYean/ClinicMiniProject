<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicMiniProject.UI.Control.BottomNavBar">
    <Border BackgroundColor="White" 
            StrokeThickness="0"
            Padding="0,10,0,20"
            VerticalOptions="End">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="30,30,0,0"/>
        </Border.StrokeShape>

        <Border.Shadow>
            <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,-5"/>
        </Border.Shadow>

        <Grid ColumnDefinitions="*,*,*">

            <VerticalStackLayout Grid.Column="0" Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                <ImageButton Source="home.png"
                             HeightRequest="25"
                             WidthRequest="25"
                             HorizontalOptions="Center"
                             Clicked="OnHomeClicked"/>
                <Label Text="Home" 
                       FontSize="11" 
                       TextColor="Black" 
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                <ImageButton Source="inquiry.png"
                             HeightRequest="25"
                             WidthRequest="25"
                             HorizontalOptions="Center"
                             Clicked="OnInquiryClicked"/>
                <Label Text="Inquiry&#x0a;History" 
                       FontSize="10" 
                       TextColor="Black" 
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                <ImageButton Source="profile.png"
                             HeightRequest="25"
                             WidthRequest="25"
                             HorizontalOptions="Center"/>
                <Label Text="profile" 
                       FontSize="11" 
                       TextColor="Black" 
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>

        </Grid>
    </Border>
</ContentView>
