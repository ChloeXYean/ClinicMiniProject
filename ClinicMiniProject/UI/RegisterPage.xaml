<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ClinicMiniProject.UI.RegisterPage"
    NavigationPage.HasBackButton="False">

	<VerticalStackLayout Padding="30" Spacing="15">

		<Label>
			<Label.FormattedText>
				<FormattedString>
					<Span Text="Heal" TextColor="Blue" FontAttributes="Bold" TextDecorations="Underline"/>
					<Span Text="Hub" TextColor="Black" FontAttributes="Bold" TextDecorations="Underline"/>
				</FormattedString>
			</Label.FormattedText>
			<Label.FontSize>32</Label.FontSize>
			<Label.HorizontalOptions>Center</Label.HorizontalOptions>
		</Label>

		<Label Text="Create New Account"
			   TextColor="Black"
               FontSize="20"
			   FontAttributes="Bold"
               HorizontalOptions="Center" />

		<Entry x:Name="FullNameEntry" Placeholder="Full Name"/>
		<Entry x:Name="EmailEntry" Placeholder="Email"/>
		<Entry x:Name="PhoneEntry" Placeholder="Phone Number"/>
		<Entry x:Name="IcEntry" Placeholder="IC Number"/>

		<Grid ColumnDefinitions="*, Auto">
		<Entry x:Name="PasswordEntry" 
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Placeholder="Password" 
			IsPassword="True" />
		
		<ImageButton x:Name="ShowPasswordBtn"
					Grid.Column="1"
					Source="eye_off.png" 
					HeightRequest="10"
					WidthRequest="10"
					Margin="0,0,10,0"
					VerticalOptions="Center"
					BackgroundColor="Transparent"
					Clicked="OnShowPasswordClicked" />
		</Grid>
		
		<Grid ColumnDefinitions="*, Auto">
		<Entry x:Name="ConfirmPasswordEntry" 
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Placeholder="Confirm Password" 
			IsPassword="True" />
		
		<ImageButton x:Name="ShowConfirmPasswordBtn"
					Grid.Column="1"
					Source="eye_off.png" 
					HeightRequest="10"
					WidthRequest="10"
					Margin="0,0,10,0"
					VerticalOptions="Center"
					BackgroundColor="Transparent"
					Clicked="OnShowConfirmPasswordClicked" />
		</Grid>

		<Button Text="Confirm" Clicked="OnRegisterClicked"/>

		<Label Text="──────── or ────────" HorizontalOptions="Center" FontAttributes="Bold"/>

		<Label HorizontalOptions="Center">
			<Label.FormattedText>
				<FormattedString>
					<Span Text="Already have an account? " TextColor="Black"/>
					<Span Text="Login" TextColor="Blue" FontAttributes="Bold">
						<Span.GestureRecognizers>
							<TapGestureRecognizer Tapped="OnGoToLogin"/>
						</Span.GestureRecognizers>
					</Span>
				</FormattedString>
			</Label.FormattedText>
		</Label>

	</VerticalStackLayout>
</ContentPage>
